profile externalOnly {
    output "eDP-2" disable
    output "DP-3" enable mode 2560x1440@180 position 0,0 scale 1
}

profile extended {
    output "DP-3" enable mode 2560x1440@180 position 0,0 scale 1
    output "eDP-2" enable mode 2880x1800@120 position 2560,0 scale 1.6
}

profile onBattery {
    output "eDP-2" enable mode 2880x1800@60 position 0,0 scale 1.6
}

profile onPower {
    output "eDP-2" enable mode 2880x1800@120 position 0,0 scale 1.6
}
